{
  "name": "designcise/bitframe",
  "version": "2.0.0",
  "type": "library",
  "description": "BitFrame PHP microframework",
  "license": "MIT",
  "authors": [
    {
      "name": "Daniyal Hamid",
      "homepage": "https://www.designcise.com/"
    }
  ],
  "require": {
    "php": ">=7.4.0",
    "ext-libxml": "*",
    "ext-simplexml": "*",
    "ext-json": "*",
    "psr/http-server-middleware": "~1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5",
    "squizlabs/php_codesniffer": "3.*",
    "phpmd/phpmd": "@stable"
  },
  "suggest": {
    "nyholm/psr7": "Add PSR-7 / PSR-17 based HTTP Messaging support for your App",
    "designcise/bitframe-fastroute": "Add routing support to your App"
  },
  "scripts": {
    "style": "vendor/bin/phpcs --standard=PSR12 src",
    "integration": "vendor/bin/phpunit --configuration phpunit.xml --testsuite integration",
    "unit": "vendor/bin/phpunit --configuration phpunit.xml --testsuite unit"
  },
  "autoload": {
    "psr-4": {
      "BitFrame\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BitFrame\\Test\\": "test/"
    },
    "files": [
      "test/Asset/function.php"
    ]
  },
  "config": {
    "sort-packages": true
  }
}
